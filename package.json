{
  "name": "sqlitebridge",
  "version": "1.1.2",
  "description": "SQLiteBridge: A TypeScript toolkit for cross-platform SQLite database management in Ionic/Capacitor applications. Generate TypeScript models, Dexie.js schemas, and services from SQLite migrations for seamless development across mobile and web platforms.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sqlitebridge": "dist/bin/sqlitebridge.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bun": "bun build src/bin/sqlitebridge.ts --outdir dist --target bun",
    "dev": "tsx src/bin/sqlitebridge.ts",
    "dev:bun": "bun run src/bin/sqlitebridge.ts",
    "test": "vitest",
    "test:bun": "bun test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sqlite",
    "migration",
    "typescript",
    "dexie",
    "model",
    "generator",
    "service",
    "bun",
    "nodejs",
    "react",
    "angular"
  ],
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.7",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@capacitor-community/sqlite": "^7.0.0",
    "dexie": "^4.0.11"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/droes19/sqlitebridge.git"
  },
  "bugs": {
    "url": "https://github.com/droes19/sqlitebridge/issues"
  },
  "homepage": "https://github.com/droes19/sqlitebridge#readme",
  "author": "Idrus Al Kaafi <droes19.al@gmail.com>"
}
